<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maverick.newsify">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Newsify"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Newsify">
        <activity android:name=".StartupScreen"></activity>
        <activity android:name=".MakeSelection" />
        <activity android:name=".ForgetPassword" />
        <activity android:name=".VerifyOTP" />
        <activity android:name=".SignUp3rdClass" />
        <activity android:name=".SignUp2ndClass" />
        <activity android:name=".SignUp" />
        <activity android:name=".Login" />
        <activity android:name=".SignInGoogle" />
        <activity android:name=".NewDetailActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>